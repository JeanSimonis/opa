{
  "upload": {
    "type": "json",
    "files": [
      {
        "pattern": "src/i18n/locales/en/*.json",
        "lang": "inherited"
      },
      {
        "group": "existing",
        "pattern": "src/i18n/locales/es/*.json",
        "lang": "es"
      },
      {
        "group": "existing",
        "pattern": "src/i18n/locales/zh_CN/*.json",
        "lang": "zh-Hans"
      }
    ]
  },

  "download": {
    "files": [
      {
        "output": "src/i18n/locales/${langLrsUnderscore}/${file}"
      }
    ],
    "includeSourceLang": true,
    "langAliases": {
      "zh-Hans": "zh-CN"
    }
  }
}
